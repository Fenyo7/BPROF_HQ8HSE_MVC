@using Rent.Data


    <h1>New Game</h1>
    <a class="btn btn-outline-primary" href="/Home/Index">Home</a>
    <br />
    <form action="/Home/NewGame" method="post">
        <br />
        <div class="form-floating mb-3">
            <input class="form-control" type="text" name="Name" /><br />
            <label for="floatingInput">Game Name</label>
        </div>
        Release date: <br />
        <input type="datetime" name="ReleaseDate" /><br /><br />
        <div class="form-floating mb-3">
            <input class="form-control" type="text" name="Publisher" /><br />
            <label for="floatingInput">Publisher</label>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" type="number" name="Rating" /><br />
            <label for="floatingInput">Rating</label>
        </div>
        <input class="btn btn-outline-primary" type="submit" value="Create" />
    </form>